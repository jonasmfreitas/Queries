<Artifacts version="1.0">
  <Artifact type="SqliteArtifact" name="TeraCopy Main DB" version="1.0" platform="Computer">
    <Source type="FileName">main.db</Source>
    <Query>SELECT name,
        datetime(julianday(started)) AS OP_START,
        CASE operation
          WHEN 1 THEN 'Copy'
          WHEN 2 THEN 'Move'
          WHEN 3 THEN 'Test'
          WHEN 6 THEN 'Delete'
        END AS OP_TYPE,
        source,
        target,
        files,
        size
      FROM List
      ORDER BY OP_START
    </Query>
